
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie Rental Form</h2>

<form id="newRental">
    <div class="form-group">
        <label>Customer</label>
        <div class="tt-container">
            <input id="customer" type="text" value="" class="form-control typeahead" />
        </div>
    </div>
    <div class="form-group">
        <label>Movies</label>
        <div class="tt-container">
            <input id="movie" type="text" value="" class="form-control typeahead" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-sm-4">
            <ul id="movies" class="list-group"></ul> 
        </div>
    </div>
    
    <br/>
    <button class="btn btn-primary">Submit</button>
</form>


@section scripts
{
    <script>
        $(document).ready(function () {

            var vm = {movieIds:[]};
           
            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('Name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/customers?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });
            
            $('#customer').typeahead({ minLength:3, highlight:true },
                {
                    name: 'customers',
                    display:'Name',
                    source: customers
                }
            ).on("typeahead:select",function(e,customer) {

                vm.customerId = customer.Id;
           });

            var movies = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('Name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/movies?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

           
            console.log(movies.length);
            $('#movie').typeahead({ highlight:true },
                {
                    name: 'movies',
                    display: 'Name',
                    source: movies
                }
            ).on("typeahead:select", function (e, movie) {
                $("#movies").append("<li class='list-group-item'>" + movie.Name + "</li>");
                alert(movie.name);
                $("#movie").typeahead("val", "");
                vm.movieIds.push(movie.Id);
               // mo.movieId = movie.Id;
            });

            $("newRental").submit(function(e) {
                e.preventDefault();

                $.ajax({
                    url: "/api/newRentals",
                    method: "POST",
                    data:vm

                }).done(function() {
                    alert("Done");    
                    }).

                fail(function() {
                        alert("Fail");
                    });

            });

        });
</script>
}
